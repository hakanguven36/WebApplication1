        mtx.strokeStyle = "white";
        mtx.lineWidth = 2;
        mtx.globalAlpha = 0.4;

        // vertical line
        mtx.moveTo(mouse.X, 0);
        mtx.lineTo(mouse.X, manvas.height);
        mtx.stroke();
        // horizontal line
        mtx.moveTo(0, mouse.Y);
        mtx.lineTo(manvas.width, mouse.Y);
        mtx.stroke();
        mtx.globalAlpha = 1.0;
    }

